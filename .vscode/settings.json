{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.ruby-lsp": true,
    "**/builds": true,
    "**/dist": true,
    "CHANGELOG.md": true,
    "README.md": true,
    "LICENSE": true,
    "pnpm-lock.yaml": true,
    "yarn.lock": true,
    "package-lock.json": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.ruby-lsp": true,
    "**/.svn": true,
    "**/*.code-search": true,
    "**/bower_components": true,
    "**/CVS": true,
    "**/node_modules": false,
    "CHANGELOG.md": true,
    "package-lock.json": true,
    "pnpm-lock.yaml": true,
    "yarn.lock": true
  },
  // TypeScript settings
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Extension Path Intellisense
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  // Format on paste and save with Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true
}
