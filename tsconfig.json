{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "hFragment",
    "types": [
      "@violentmonkey/types",
      "@types/chrome",
      "@types/firefox-webext-browser",
      "@types/greasemonkey",
      "@types/tampermonkey",
      "node"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    // needs to be in the deepest dir used as target in the rollup build
    // https://stackoverflow.com/q/40460790, https://github.com/rollup/plugins/issues/243
    "outDir": "builds/rollup",
  },
  "exclude": [
    "builds/**/*",
    "node_modules/**/*"
  ]
}