{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "hFragment",
    "types": [
      "@violentmonkey/types",
      "@types/chrome",
      "@types/firefox-webext-browser",
      "@types/greasemonkey",
      "@types/tampermonkey",
      "node"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "outDir": "builds",
  },
  "exclude": [
    "builds/**/*",
    "node_modules/**/*"
  ]
}